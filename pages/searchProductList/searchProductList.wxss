.content{
  display: flex;
  flex-direction: column;
  align-items: center;
  
  
}
page{
  background-color: #F4F5F7;
}
.scroll_view{
  width: 95%;
  margin-bottom: 100rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.search_title{
  
}
.product_list_item{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 200rpx;
  padding: 10rpx;
  margin-top: 20rpx;
  
  background-color: white;
  align-items: center;
}
.product_list_item_img{
  width: 160rpx;
  height: 160rpx;

}
.product_list_item_product_info{
  display: flex;
  flex-direction: column;
  width: 70%;
  height: 90%;
  margin-left: 20rpx;
  margin-right: 30rpx;
}
.product_list_item_product_name{
  height: 66%;
  font-size: 30rpx;
  font-weight:bold;
}
.product_list_item_product_name{
  height: 33%;
  font-size: 30rpx;
  font-weight:bold;
}
.product_list_item_product_brand{
  height: 33%;
  font-size: 25rpx;
}
.product_list_item_product_weight{
  height: 33%;
  font-size: 25rpx;
}
.product_list_item_price_and_collection{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 33%
}
.product_list_item_product_price_str{
  font-size: 25rpx;
  color: #ff4242;
  font-weight:bold;
  width: 75%
}
.product_list_item_product_collection_img{
  width: 50rpx;
  height: 50rpx;
}
.product_list_item_specification_item{
  display: flex;
  flex-direction: column;
  width: 98%;
  height: 100rpx;
  padding: 10rpx;
  margin-top: 2rpx;
  background-color: white;
}
.product_list_item_specification_item_name{
  height: 40%;
  align-content: center;
  font-size: 28rpx;
}
.product_list_item_specification_item_name_none{
  height: 40%;
  align-content: center;
  font-size: 28rpx;
  color: #8e8e8e
}
.product_list_item_specification_item_price_and_num{
  height: 60%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.product_list_item_specification_item_price{
  font-size: 28rpx;
  color: #ff4242;
  font-weight:bold;
}
.product_list_item_specification_item_price_none{
  font-size: 28rpx;
  color: #8e8e8e;
  font-weight:bold;
}
.product_list_item_specification_item_unit{
  font-size: 28rpx;
}
.product_list_item_specification_item_unit_none{
  font-size: 28rpx;
  color: #8e8e8e;
}
.product_list_item_specification_item_cart_num{
  display: flex;
  flex-direction: row;
  margin-right: 10rpx;
  align-items: center;
}
.product_list_item_specification_item_input{
  width: 100rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  border: 1rpx solid #eeeeee;
  text-align: center;
}
.product_list_item_specification_item_add_and_sub_img{
  width: 50rpx;
  height: 50rpx;
}
.update-quantity-modal-view{
  display: flex;
  justify-content: center;
  align-items: center
}
.update-quantity-input{
  width:80px;
  height:30px;
  margin-top:8px;
  text-align:center;
  margin-left:33%;
  border: 1rpx solid #eeeeee;
}
.update-quantity-title-view{
  width:100%;
  text-align: center
}
.product_list_item_specification_item_insert_subscribeStock{
  display: flex;
  flex-direction: row;
  margin-right: 10rpx;
  color: white;
  background-color: #fe8954;
  border-radius: 5rpx;
  font-size: 25rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

/* scrollview 隐藏滚动条 */
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
.bottom_shopping_cart{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  height: 90rpx;
  width: 100%;
  background-color: white;
  position: fixed;
  bottom: 0;
  border-top: 1rpx solid #eeeeee;
}
.totalPrice_str{
  font-size: 28rpx;
}
.totalPrice{
  font-size: 28rpx;
  color: #ff4242;
  margin-right: 10rpx;
}
.go_to_shoppingCart_str{
  width: 200rpx;
  height: 90rpx;
  background-color: #33B3ED;
  color: white;
  font-size: 33rpx;
  line-height: 90rpx;
  text-align: center;
}
.shopping_cart_img_view{
  height: 100rpx;
  width: 100rpx;
  position: fixed;
  bottom: 20rpx;
  left: 20rpx;
}
.shopping_cart_img{
  height: 100rpx;
  width: 100rpx;
}
.shopping_cart_num{
  height: 30rpx;
  position: fixed;
  bottom: 70rpx;
  left: 80rpx;
  font-size: 25rpx;
  background-color: #ff4242;
  padding:6rpx 10rpx 6rpx 10rpx;
  border-radius: 30rpx;
  line-height: 30rpx;
  color: white;
}