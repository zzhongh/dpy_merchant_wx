/* pages/exchange/exchange.wxss */
.item-wrap-view{
  width:100%;
  height:30px;
  display: flex;
  align-content: center;
  flex-direction: row;
  padding:6px;
  border-bottom-width: 1px;
  border-bottom-color: gray;
  background-color: white;
  line-height: 30px;
  
}
.item-tite-text{
  font-size: 14px;
}

.item-value-text{
  position: absolute;
  right: 6px;
}

.dark-text{
  color: #333333
}

.light-text{
  color: #666666
}

.red-text{
  color: red
}

.common-font-size{
  font-size: 13px;
}

.margin{
  margin-top: 6px
}

.refund-notice-wrap-view{
  width:100%;
  padding-left:6px;
  padding-right:6px;
  display: flex;
  flex-direction: row;
  margin-top: 8px
}

.refund-notice-text{
  font-size:12px;
  color:red;
  margin-left:4px;
  text-indent:20rpx;
  margin-right: 4px
}
.choose-available-area{
  width:10%;
  display: flex;
  justify-content: center;
  align-items:center;
}
.description-textarea{
  width:100%;
  height:80px;
  font-size:13px;
  color: #333333;
  background-color: #F1F1F1;
  padding: 6px;
  margin-top: 3px;
  
}
.selected-product-info-wrap-view{
  width:100%;
  height:45px;
  display: flex;
  align-content: center;
  justify-content: center;
  align-items:center;
  flex-direction: row;
  position:fixed;
  bottom:0;
  background-color: #00c4f9
}
.photos-wrap-view{
  width:100%;
  height:85px;
  font-size:13px;
  color: #333333;
  background-color: white;
  margin-top: 3px;
  display: flex;
  flex-direction: row;
}
.photo-item-view{
  width:30%;
  height:100%;
  margin-left:2.5%;
  display: flex;
  align-content: center;
  justify-content: center;
  align-items:center;
  flex-direction: row;
}
.photo-item{
  width:100%;
  height:100%
}
.choose-photos-wrap-view{
  width:100%;
  height:120px;
  background-color:white;
  display: flex;
  align-content: center;
  flex-direction: column;
}
.modal-box{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
  z-index: 99999
}

.modal-body{
  position:relative;
  z-index: 99999
}

.modal-content{
  /* width: 60%; */
  margin-top: 100px;
  overflow: hidden;
  border-radius: 10rpx;
}

.modal-content{
  width: 60%;
  height:150px; 
  
}
.modal-content .fenxiang{
  width: 100%;
  height: 40%;
}
.close-modal-btn-view{
  width:100%;
  height:40px;
  background-color:orange;
  display: flex;
  align-content: center;
  justify-content: center;
  align-items:center;
  flex-direction: row;
  position:absolute;bottom:0px
}
.close-modal-btn-text{
  font-size:15px;
  color: white
}
.refund-price-info-view{
  display: flex;
  align-content: center;
  flex-direction: row;
  width:70%;
  position: absolute;
  right: 6px;
  justify-content: flex-end
}
.choose-reason-btn-view{
  display: flex;
  align-content: center;
  flex-direction: row;
  width:70%;
  position: absolute;
  right: 0px;
  justify-content: flex-end
}
.choose-reason-btn-text{
  text-align:right;
  margin-right:6px
}
.refund-description-view{
  width:100%;
  height:120px;
  background-color:white;
  display: flex;
  align-content: center;
  flex-direction: column;
  z-index: -1
}
.choose-photos-title{
  margin-left:6px;
  margin-top:6px
}
.exchange-success-text{
  color:white;
  font-size:13px;
  font-weight:200
}
.reason-item-view{
  width:100%;
  height:29px;
  display: flex;
  align-content: center;
  align-items:center;
  flex-direction: row;
}
.reason-item-select-status-image{
  width:25px;
  height:25px;
  position:absolute;
  right:6px
}
.reason-item-title{
  font-size:13px;
  color:#333333;
  margin-left:6px
}
.choose-photos-title-view{
  display: flex;
  align-content: center;
  flex-direction: row;
}