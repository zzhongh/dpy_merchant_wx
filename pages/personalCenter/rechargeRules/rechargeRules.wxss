.rules-wrap-view{
  width:100%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  background-color: white;
  padding-bottom: 6px;
  margin-top: 6px;
  padding-left: 1px
  
}
.rules-item{
  display: flex;
  flex-direction: column;
  width:33%;
  text-align:center;
  align-items: center;
  margin-top: 8px;
  
}

.banner-image{
  width:100%;
  height:100%
}

.balance-info-wrap-view{
  width:100%;
  height:40px;
  background-color:white;
  display: flex;
  align-items: center;
  flex-direction: row;
  align-content: center;
  margin-top:6px;
  justify-content: center;
}

.common-text{
  font-size:13px;
  color: #333333
}

.balance-text{
  font-size:13px;
  color:#666666;
  margin-left:4px;
  margin-right:4px
}

.recharge-input-wrap-view{
  width:100%;
  height:50px;
  background-color:white;
  display: flex;
  align-items: center;
  flex-direction: column;
  align-content: center;
  justify-content: center;
}

.recharge-input-content-view{
  width:80%;
  height:50px;
  background-color:white;
  display: flex;
  align-items: center;
  flex-direction: row;
  align-content: center;
  justify-content: center;
  border-radius:6px
}

.recharge-input{
  width:80%;
  height:30px;
  background-color:#F2F2F2;
  font-size:14px;
  border-top-left-radius:6px;
  border-bottom-left-radius:6px
}

.recharge-btn-view{
  width:20%;
  height:30px;
  background-color:red;
  border-top-right-radius:6px;
  border-bottom-right-radius:6px;
  display: flex;
  align-items: center;
  flex-direction: column;
  align-content: center;
  justify-content: center;
}

.recharge-btn-text{
  color:white;
  font-size:12px
}

.recharge-notice-wrap-view{
  width:100%;
  padding-left:6px;
  padding-right:6px;
  background-color:white;
  display: flex;
  flex-direction: row;
}

.recharge-notice-text{
  font-size:12px;
  color:red;
  margin-left:4px;
  text-indent:20rpx;
  margin-right: 6px
}