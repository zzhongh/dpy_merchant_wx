/* pages/enterTheSalesCenter/enterTheSalesCenter.wxss */
.scrollview{
  /* margin-top:6px; */
  margin-bottom:45px
}
.product-wrap-view{
  width:90%;
  height:130px;
  background-color:white;
  padding:6px
}
.productName-wrap-view{
  display: flex;
  align-content: center;
  flex-direction: row;
}
.productName-text{
  font-size:15px
}
.brandName-areaName-wrap-view{
  display: flex;
  align-content: center;
  flex-direction: row;
  margin-bottom:10px
}

.brandName-text{
  color:#666666;
  font-size:12px
}
.price-text{
  color:red;
  font-size:14px
}
.specificationName-text{
  color:#333333;
  font-size:14px;
  white-space:nowrap;
  text-overflow: ellipsis
}
.delete-btn-wrap-view{
  width:60px;
  height:25px;
  line-height:25px;
  text-align:center;
  position:absolute;
  right:6px;
  background-color:red;
  border-radius:4px
}
.delete-btn-text{
  color:white;
  font-size:14px
}
.product-content-view{
  width:100%;
  height:95px;
  display: flex;
  align-content: center;
  flex-direction: row;
  margin-top:2px
}
.select-btn-view{
  width:13%;
  display: flex;
  align-content: center;
  line-height:100%;
  text-align:center;
  align-items:center;
}
.select-item-image{
  width:30px;
  height:30px
}
.product-image-view{
  width:32%;
  display: flex;
  align-content: center;
  line-height:100%
}
.product-info-view{
  width:55%;
  padding:10px;
  display: flex;
  align-content: center;
  flex-direction: column
}
.product-image{
  width:100%;
  height:100%
}
.update-quantity-wrap-view{
  display: flex;
  align-content: center;
  flex-direction: row;
  margin-top:2px
}
.add-quantity-view{
  width:30px;
  height:25px;
  border: 1rpx solid #eeeeee;
  text-align:center;
  font-size:14px;
  line-height:25px
}
.quantity-view{
  width:60px;
  height:25px;
  border: 1rpx solid #eeeeee;
  text-align:center;
  font-size:14px;
  line-height:25px
}
.minus-quantity-view{
  width:30px;
  height:25px;
  border: 1rpx solid #eeeeee;
  text-align:center;
  font-size:14px;
  line-height:25px
}
.selected-product-info-wrap-view{
  width:100%;
  height:45px;
  display: flex;
  align-content: center;
  flex-direction: row;
  position:fixed;
  bottom:0;
  background-color: white
}
.select-all-image-wrap-view{
  width:15%;
  display: flex;
  justify-content: center;
  line-height:100%;
  align-items:center;
  flex-direction: row
}
.select-all-image{
  width:30px;
  height:30px
}
.selected-total-info-view{
  width:55%;
  display: flex;
  flex-direction: row
}
.select-all-text-view{
  width:20%;
  display: flex;
  justify-content: center;
  line-height:100%;
  align-items:center;
  flex-direction: row
}
.selected-total-price-view{
  width:80%;
  display: flex;
  justify-content: center;
  line-height:100%;
  align-items:center;
  flex-direction: row;
}
.selected-total-price-text{
  color:red;
  font-size:15px
}
.order-view{
  width:30%;
  background-color:#ff9c66;
  display: flex;
  justify-content: center;
  align-items:center;
}
.order-text{
  color:white;
  font-size:15px
}
.placeholder-center{
  text-align: center
}
.update-quantity-modal-view{
  display: flex;
  justify-content: center;
  align-items: center
}
.update-quantity-input{
  width:80px;
  height:30px;
  margin-top:8px;
  text-align:center;
  margin-left:33%;
  border: 1rpx solid #eeeeee;
}
.update-quantity-title-view{
  width:100%;
  text-align: center
}
.list-is-empty-view{
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  height:100%;
  width:100%;
  justify-content: center;
}
.list-is-empty-view-text{
  color:#666666;
  font-size:14px;
  margin-top: 6px
}
.go-to-exchange-btn-view{
  width:74px;
  height:28px;
  border: 1rpx solid #219ff7;
  border-radius:6px;
  margin-top:6px;
  display: flex;
  align-items:center;
  justify-content: center;
}
.go-to-exchange-btn-text{
  font-size: 14px;
  color: #219ff7
}
.item-type-image{
  width:84px;
  height:59.4px;
}
.wx_pay_modal_box{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.4);
  display: flex;
  justify-content: center;
  
}
.wx_pay_modal_content{
  height: 260rpx;
  width: 80%;
  background-color: white;
  margin-top: 300rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-top: 20rpx;
}
.wx_pay_modal_title{
  width: 100%;
  height: 60rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 50rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.wx_pay_modal_buttoms{
  height: 100rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-top: 30rpx;
  border-top: 0.5rpx solid rgb(217, 217, 218);
}
.wx_pay_modal_left_buttom{
  height: 100rpx;
  width: 50%;
  font-size: 30rpx;
  color: red;
  line-height: 120rpx;
  text-align: center;
  border-right: 0.5rpx solid rgb(217, 217, 218);
}
.wx_pay_modal_right_buttom{
  height: 100rpx;
  width: 100%;
  font-size: 30rpx;
  color: #219ff7;
  line-height: 120rpx;
  text-align: center;
  font-weight: 800
}